>> +		if (!id)
>> +			defq->btimelimit = newlim->d_spc_timer;
>> +		ddq->d_btimer = cpu_to_be32(newlim->d_spc_timer);
>> +	}
>> +	if (newlim->d_fieldmask & QC_INO_TIMER) {
>> +		printk("setting inode timer to %d\n", newlim->d_ino_timer);
> 
> Stray printk here.
> 
